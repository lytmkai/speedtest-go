name: Build Speedtest Binaries

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
  workflow_dispatch:
    

jobs:
  build:
    name: Build for ${{ matrix.os }}-${{ matrix.arch }}
    runs-on: ubuntu-latest
    strategy:
      matrix:
        include:
          # Linux
          - os: linux
            arch: amd64
            goos: linux
            goarch: amd64
            ext: ""
            archive_format: tar.gz
          - os: linux
            arch: arm64
            goos: linux
            goarch: arm64
            ext: ""
            archive_format: tar.gz
          # Windows
          - os: windows
            arch: amd64
            goos: windows
            goarch: amd64
            ext: ".exe"
            archive_format: zip
          # macOS
          - os: darwin
            arch: amd64
            goos: darwin
            goarch: amd64
            ext: ""
            archive_format: tar.gz
          - os: darwin
            arch: arm64
            goos: darwin
            goarch: arm64
            ext: ""
            archive_format: tar.gz

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Go
        uses: actions/setup-go@v5
        with:
          go-version: '1.23'  # 根据你的项目调整

      - name: Build binary
        env:
          CGO_ENABLED: "0"   # 关键：静态链接，无 libc 依赖
          GOOS: ${{ matrix.goos }}
          GOARCH: ${{ matrix.goarch }}
        run: |
          go build -trimpath -ldflags "-s -w" -o speedtest${{ matrix.ext }} .

      - name: Create archive (tar.gz)
        if: matrix.archive_format == 'tar.gz'
        run: |
          tar -czf speedtest_${{ matrix.goos }}_${{ matrix.goarch }}.tar.gz speedtest${{ matrix.ext }}

      - name: Create archive (zip)
        if: matrix.archive_format == 'zip'
        run: |
          zip speedtest_${{ matrix.goos }}_${{ matrix.goarch }}.zip speedtest${{ matrix.ext }}

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: speedtest_${{ matrix.goos }}_${{ matrix.goarch }}
          path: speedtest_${{ matrix.goos }}_${{ matrix.goarch }}.${{ matrix.archive_format }}

  release:
    name: Release binaries
    needs: build
    runs-on: ubuntu-latest
    if: github.event_name == 'release' && github.event.action == 'published'
    steps:
      - name: Download all artifacts
        uses: actions/download-artifact@v4
        with:
          path: artifacts

      - name: Display structure of downloaded files
        run: ls -R

      - name: Release
        uses: softprops/action-gh-release@v2
        with:
          files: |
            artifacts/**/speedtest_*.tar.gz
            artifacts/**/speedtest_*.zip
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
